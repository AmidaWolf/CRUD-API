{
  "name": "crud-api",
  "version": "1.0.0",
  "description": "Simple CRUD API without Express",
  "main": "index.ts",
  "scripts": {
    "start:dev": "npx nodemon",
    "start:prod": "npm run build && node dist/index.js",
    "start:multi": "npm run build && node dist/multi.js",
    "build": "tsc",
    "lint": "npx eslint ./src",
    "format": "npx eslint ./src --fix",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "**/tests/**/*.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AmidaWolf/CRUD-API.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AmidaWolf/CRUD-API/issues"
  },
  "homepage": "https://github.com/AmidaWolf/CRUD-API#readme",
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@jest/globals": "^29.3.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "uuid": "^9.0.0",
    "eslint": "^8.31.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "dotenv": "^16.0.3"
  }
}
